# File: /etc/systemd/system/cryonix-stream-manager.service

[Unit]
Description=Cryonix Stream Manager
After=network.target

[Service]
User=cryonix
Group=cryonix
WorkingDirectory=/opt/cryonix/services/stream_manager
Environment=PYTHONPATH=/opt/cryonix/services/stream_manager
ExecStart=/usr/local/bin/uvicorn main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
